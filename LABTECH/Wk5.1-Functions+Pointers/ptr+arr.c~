/* ptr+arr.c - pointers and arrays
 *
 * D Provine, 5 May 2009
 */

#include <stdio.h>

int main()
{
    int a[5] = { 1, 2, 3, 4, 5 };
    int *p;
    int i;

    p = &a[0];

    p++;       
    *p += 1;  

    p+=2;      
    *p += 2;  

    for (i = 0; i < 5; i++)
        printf("a[%d] => %d\n", i, a[i]);

    return 0;
}
